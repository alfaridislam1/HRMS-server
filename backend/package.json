{
  "name": "hrms-backend",
  "version": "1.0.0",
  "description": "HRMS SaaS backend - Node.js + Express + TypeScript",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "dev:watch": "nodemon --exec ts-node src/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "db:migrate:dev": "knex migrate:latest --env development",
    "db:migrate:prod": "knex migrate:latest --env production",
    "db:seed": "knex seed:run --env development",
    "db:rollback": "knex migrate:rollback --env development",
    "docker:build": "docker build -t hrms-backend:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env hrms-backend:latest"
  },
  "keywords": [
    "HRMS",
    "SaaS",
    "Express",
    "TypeScript",
    "PostgreSQL",
    "MongoDB"
  ],
  "author": "Masirat Al Ibda",
  "license": "PROPRIETARY",
  "dependencies": {
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "dotenv": "^16.3.1",
    "pg": "^8.11.3",
    "pg-pool": "^3.6.1",
    "knex": "^3.1.0",
    "mongoose": "^8.0.3",
    "redis": "^4.6.12",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.1.2",
    "bcryptjs": "^2.4.3",
    "joi": "^17.11.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "axios": "^1.6.2",
    "aws-sdk": "^2.1545.0",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "nodemailer": "^6.9.7",
    "bull": "^4.11.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/uuid": "^9.0.7",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
